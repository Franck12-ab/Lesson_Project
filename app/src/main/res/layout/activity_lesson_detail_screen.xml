<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".LessonDetailScreen">

    <ImageView
        android:id="@+id/button5"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        android:src="@drawable/twotone_arrow_back_24" />

    <TextView
        android:id="@+id/tvvideoTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:text="Video Title"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/videoDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:text="Video Description"
        android:textAlignment="textStart"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/lengthDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Length: 1 hour 20 min"
        android:textAlignment="center"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnWatch"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Watch"
            android:textSize="12sp" />

        <Button
            android:id="@+id/completionButton"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Complete"

            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/completionStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#EE4CAF50"
        android:fontFamily="sans-serif-medium"
        android:text="Completed"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:visibility="invisible" />



</LinearLayout>