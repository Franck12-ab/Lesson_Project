<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="8dp">


    <ImageView
        android:id="@+id/ivLessonNumber"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="#0000E515"
        android:scaleType="center"
        android:src="@drawable/twotone_looks_one_24" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvRowLessonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Course name goes here"
            android:textSize="18sp"/>


        <TextView
            android:id="@+id/tvRowLessonLength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Length course min"
            android:textSize="18sp"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/ivLessonCheck"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="#0000E515"
        android:scaleType="center"
        android:src="@drawable/baseline_check_24" />


</LinearLayout>